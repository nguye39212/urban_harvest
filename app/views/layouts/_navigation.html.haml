%nav.navbar.navbar-default
  .container-fluid
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle.collapsed{"aria-expanded" => "false", "data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => root_url} Urban Harvest
    / Collect the nav links, forms, and other content for toggling
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav
        - if current_user.present?
          %li
            = link_to "<span class='fa fa-dashboard'></span>Dashboard".html_safe, root_path

        %li
          = link_to "<span class='fa fa-info-circle'></span>Why donate?".html_safe, why_donate_path

      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li
            %a.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
              %span.fa.fa-user
              My Account
              %span.caret
            %ul.dropdown-menu
              %li= link_to '<span class="fa fa-cog"></span> Account settings'.html_safe, edit_user_registration_path
              %li= link_to '<span class="fa fa-sign-out"></span> Sign out'.html_safe, destroy_user_session_path, method: :delete
        - else
          %li= link_to 'Sign in', new_user_session_path
