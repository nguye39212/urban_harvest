.page-wrapper
  %h1.text-center Register as a #{params[:role].gsub('_', ' ')}

  .container
    .row
      .col-md-10.col-md-offset-1
        .form-wrapper
          = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            = devise_error_messages!

            %fieldset
              .legend
                %legend #{params[:role] == 'donor' ? 'Business' : 'Organization'} Information and Location
              .form-group
                = f.label :name, "#{params[:role] == 'donor' ? 'Business' : 'Organization'} Name", class:'control-label'
                = f.text_field :name, class:'input-xlarge form-control'

              .form-group
                = f.label "Street Address", class:'control-label'
                = f.text_field :address_1, class:'input-xlarge form-control'
                = f.text_field :address_2, class:'input-xlarge form-control margin-top-5'

              .form-group
                .row
                  .col-sm-6
                    .control-group
                      = f.label :city, class:'control-label'
                      .controls
                        = f.text_field :city, class:'input-xlarge form-control'

                  .col-sm-3
                    .control-group
                      = f.label :state, class:'control-label'
                      .controls
                        = f.text_field :state, class:'input-xlarge form-control'

                  .col-sm-3
                    .control-group
                      = f.label :zip_code, class:'control-label'
                      .controls
                        = f.text_field :zip_code, class:'input-xlarge form-control'

              .legend
                %legend Contact Person at #{params[:role] == 'donor' ? 'Business' : 'Organization'}


              .form-group
                .row
                  .col-sm-6
                    = f.label :first_name, class:'control-label'
                    = f.text_field :first_name, class:'input-xlarge form-control'
                  .col-sm-6
                    = f.label :last_name, class:'control-label'
                    = f.text_field :last_name, class:'input-xlarge form-control'

              .form-group
                .row
                  .col-sm-6
                    = f.label :phone, class:'control-label'
                    = f.text_field :phone, class:'input-xlarge form-control'



              .legend
                %legend Account Information

                .form-group
                  = f.label :email, class:'control-label'
                  = f.text_field :email, class:'input-xlarge form-control'

                .form-group
                  = f.label :password, class:'control-label'
                  = f.password_field :password, class:'input-xlarge form-control'

                .form-group
                  = f.label :password_confirmation, class:'control-label'
                  = f.password_field :password_confirmation, class:'input-xlarge form-control'

                  = f.hidden_field :role, value:params[:role]

                .form-group
                  = f.submit "Register", class:'btn btn-success btn-block'

          = render "devise/shared/links"
